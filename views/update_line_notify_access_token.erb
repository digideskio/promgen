<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="<%= to("/project/#{@project.id}") %>"><%= @project.name %></a></li>
  <li class="active">Update project</li>
</ol>

<div class="page-header">
  <h1>Update project configuration - <%= @project.name %></h1>
</div>

<div class="row">
  <form method="post" action="<%= to("/project/#{@project.id}/update_line_notify_access_token") %>">
    <div class="form-group">
      <label for="inputLineNotifyAccessToken">LINE Notify Access Token</label>
      <input type="password" name="line_notify_access_token" class="form-control"  id="inputLineNotifyAccessToken" value="<% if @project.line_notify_access_token %>***<% end %>">
    </div>

    <button type="submit" class="btn btn-default">Update</button>
  </form>
</div>
