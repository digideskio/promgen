<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Create new project</li>
</ol>

<div class="page-header">
    <h1>Create new project for <%= @service.name %></h1>
</div>

<div class="row">
    <form method="post" action="<%= to("/service/#{@service.id}/project/create") %>">
        <div class="form-group">
            <label for="inputName">Name (Required)</label>
            <input type="text" name="name" class="form-control" id="inputName" required>
        </div>
        <div class="form-group">
            <label for="inputHipchatChannel">Hipchat Channel</label>
            <input type="text" name="hipchat_channel" class="form-control"  id="inputHipchatChannel">
        </div>
        <div class="form-group">
            <label for="inputMailAddress">Mail Address</label>
            <input type="text" name="mail_address" class="form-control"  id="inputMailAddress">
        </div>
        <div class="form-group">
            <label for="webhookURL">Webhook URL</label>
            <input type="text" name="webhook_url" class="form-control"  id="webhookURL">
        </div>
        <div class="form-group">
            <label for="inputAccessToken">access token</label>
            <input type="password" name="access_token" class="form-control"  id="inputAccessToken">
        </div>

        <button type="submit" class="btn btn-default">Register</button>
    </form>
</div>
