<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="<%= to("/project/#{@project.id}") %>"><%= @project.name %></a></li>
  <li class="active">Update project</li>
</ol>

<div class="page-header">
  <h1>Update project configuration - <%= @project.name %></h1>
</div>

<div class="row">
  <form method="post" action="<%= to("/project/#{@project.id}/update") %>">
    <div class="form-group">
      <label for="inputName">Name (Required)</label>
      <input type="text" name="name" class="form-control" id="inputName" value="<%= @project.name %>" required>
    </div>
    <div class="form-group">
      <label for="inputHipchatChannel">Hipchat Channel</label>
      <input type="text" name="hipchat_channel" class="form-control"  id="inputHipchatChannel" value="<%= @project.hipchat_channel %>">
    </div>
    <div class="form-group">
      <label for="inputMailAddress">Mail Address</label>
      <input type="text" name="mail_address" class="form-control"  id="inputMailAddress" value="<%= @project.mail_address %>">
    </div>
    <div class="form-group">
      <label for="webhookURL">Webhook URL</label>
      <input type="text" name="webhook_url" class="form-control"  id="webhookURL" value="<%= @project.webhook_url %>">
    </div>
    <div class="form-group">
      <label for="inputLineNotifyAccessToken">LINE Notify Access Token</label>
      <input type="password" name="line_notify_access_token" class="form-control"  id="inputLineNotifyAccessToken" value="<% if @project.line_notify_access_token %>***<% end %>">
    </div>

    <button type="submit" class="btn btn-default">Register</button>
  </form>
</div>
